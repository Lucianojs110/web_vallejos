---
import PaymentMethodModal from '../../islands/PaymentMethodModal';  // Asegúrate de que la ruta sea correcta
const { paymentMethods } = Astro.props;
---
<div class="flex flex-col items-center gap-1 mb-2 cursor-pointer" transition:animate="slide">
  <PaymentMethodModal client:load paymentMethods={paymentMethods}>
    <div class="flex p-1 items-center gap-2">
      <i>
        <img
          src="/images/payment-icon.svg"
          alt="Método de Pago"
          class="text-2xl"
          width="40"
          height="40"
        />
      </i>
      <span>Selecciona tu método de pago</span>
    </div>
  </PaymentMethodModal>
</div>
