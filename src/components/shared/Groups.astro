---
import { getAllGroups } from "../../services";
const allGroups = await getAllGroups();
const groups = allGroups.slice(0, 8); // Limit to 10 groups
---

<div class="!text-gray-500 flex justify-center items-center p-6 font-bold text-xl">
    CATEGOR√çAS PRINCIPALES
</div>

<div class="w-full bg-white p-6">
    <div class="grid grid-cols-2 md:grid-cols-3 xl:grid-cols-4 gap-4 w-full md:w-4/5 xl:w-3/4 mx-auto">
        {groups.map(
            (group: { slug: string, nombre: string, foto: string }) => (
                <div class="flex flex-col items-center">
                    <a href={`/categoria/${group.slug}`} class="block w-24 h-24 rounded-full overflow-hidden shadow-lg">
                        <img 
                            src={group.foto} 
                            alt={group.nombre} 
                            class="w-full h-full object-cover"
                        />
                    </a>
                    <span class="text-xs font-semibold mt-2 text-center">{group.nombre}</span>
                </div>
            )
        )}
    </div>
</div>
